<section class="probootstrap-section probootstrap-section-colored probootstrap-bg probootstrap-custom-heading probootstrap-tab-section">
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center section-heading probootstrap-animate">
                <h2 class="mb0">Üniversitemizden Haberler</h2>
            </div>
        </div>
    </div>
    <div class="probootstrap-tab-style-1">
        <ul class="nav nav-tabs probootstrap-center probootstrap-tabs no-border">
            @foreach (var x in Model.Item3)
            {
                if(count1==0)
                {
                    <li class="active"><a data-toggle="tab" href="#@x.TypeName">@x.TypeName</a></li>
                    count1++;
                }
                else
                {
                    <li><a data-toggle="tab" href="#@x.TypeName">@x.TypeName</a></li>
                }
                
            }
            @*<li class="active"><a data-toggle="tab" href="#featured-news">Duyurular</a></li>
                <li><a data-toggle="tab" href="#upcoming-events">Etkinlikler</a></li>*@
        </ul>
    </div>
</section>

<section class="probootstrap-section probootstrap-section">
    <div class="container">
        <div class="row">
            <div class="col-md-12">

                <div class="tab-content">
                    @foreach (var xy in Model.Item3)
                    {
                        if(count2>0)
                        {
                            tab = "tab-pane fade";                           
                        }                  
                        else
                        {
                            count2++;
                        }
                        <div id="@xy.TypeName" class="@tab">
                            <div class="row">
                                @*<div class="col-md-12">
                                    <div class="owl-carousel" id="owl1">
                                    @foreach (var x in Model.Item2)
                                    {
                                    <div class="item">
                                    <a href="#" class="probootstrap-featured-news-box">
                                    <figure class="probootstrap-media"><img src="~/image/@x.ImageUrl" class="img-responsive" style="height:600px"></figure>
                                    <div class="probootstrap-text">
                                    <h3 style="white-space: nowrap; overflow: hidden;text-overflow: ellipsis;">@x.Baslik</h3>
                                    <p style="white-space: nowrap; overflow: hidden;text-overflow: ellipsis;">@x.Aciklama</p>
                                    <span class="probootstrap-date"><i class="icon-calendar"></i>@x.Tarih</span>

                                    </div>
                                    </a>
                                    </div>
                                    }

                                    </div>
                                    </div>*@

                                @foreach (var x in Model.Item2)
                                {
                                   if(x.PostType.TypeName==xy.TypeName)
                                    {
                                        <div class="col-lg-6">
                                        <div class="probootstrap-service-2 probootstrap-animate">
                                            <div class="image">
                                                <div class="image-bg">
                                                    <img src="~/image/@x.ImageUrl">
                                                </div>
                                            </div>

                                            <div class="text">
                                                <span class="probootstrap-meta"><i class="icon-calendar2"></i> @x.Tarih</span>
                                                <h3 style="overflow: hidden;text-overflow: ellipsis;width:100%"><strong>@x.Baslik</strong></h3>
                                                <p style="overflow: hidden;text-overflow: ellipsis;width:100%">@x.Aciklama</p>
                                                <p><a href="#" class="btn btn-primary">Detay</a></p>
                                            </div>
                                        </div>
                                    </div>
                                    }
                                    
                                }
                            </div>
                            <!-- END row -->
                        <div class="row">
                                <div class="col-md-12 text-center">
                                    <p><a href="#" class="btn btn-primary">View all news</a></p>
                                </div>
                            </div>
                        </div>
                        if(count2==6)
                        {
                            break;
                        }
                    }
                </div>

            </div>
        </div>
    </div>
</section>

