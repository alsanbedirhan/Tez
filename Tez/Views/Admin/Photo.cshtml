 @using Tez.Models
 @model List<Image>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="page-header row no-gutters py-4">
    <div class="col-12 col-sm-4 text-center text-sm-left mb-0">
        <span class="text-uppercase page-subtitle">Admin Paneli</span>
        <h3 class="page-title">Ana Sayfa Fotoğrafları</h3>
    </div>
</div>

<form method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-lg-9 col-md-12">
            @foreach (var item in Model)
            {
                <div class="col-lg-12 mb-4">
                    <div class="card card-small card-post">
                        <div class="card-post__image" style="background-image: url(/../image/main/@item.ImageURL);height:400px"></div>                    
                        <div class="card-footer text-muted border-top py-3">
                            <span class="d-inline-block">
                                By
                                <a class="text-fiord-blue" href="#" style="pointer-events: none;">@item.PaylasanAdmin</a> on
                                <a class="text-fiord-blue" href="#" style="pointer-events: none;">@item.Tarih</a>                                                                                                                                                                                                                    
                            </span>
                            <a class="text-danger" href="/Admin/PhotoSil/@item.ImageID"><strong>Sil</strong></a>   
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="col-lg-3 col-md-12">
            <!-- Post Overview -->
            <div class='card card-small mb-3'>
                <div class="card-header border-bottom">
                    <h6 class="m-0">Actions</h6>
                </div>
                <div class='card-body p-0'>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item p-3">
                            <span class="d-flex mb-2 ml-auto">
                                <i class="material-icons mr-1">flag</i>
                                <strong class="mr-1">File: </strong>
                                <input type="file" name="ImageUrl" style="margin-left:auto" accept="image/*" />
                            </span>
                        </li>
                        <li class="list-group-item d-flex px-3">
                            <button class="btn btn-sm btn-accent ml-auto">
                                <i class="material-icons">file_copy</i> Yayınla
                            </button>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</form>